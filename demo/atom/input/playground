const bankAccountMask = {
  mask: 'ES00 0000 0000 00 0000000000',
  placeholder: {
    lazy: true,
    char: '_'
  }
}

const postalCodeMask = {
  mask: '00000',
  placeholder: {
    lazy: true,
    char: 0
  }
}

return (
  <div>
    <AtomInput.Mask
      label='Bank account'
      name='bankAccount'
      mask={bankAccountMask}
      placeholder='ES00 0000 0000 00 0000000000'
    />

    <AtomInput.Mask
      name='postalCode'
      label='Postal Code'
      mask={postalCodeMask}
      placeholder='00000'
    />

    <AtomInput.Password
      name='password'
      label='Password input'
    />

    <AtomInput.Password
      name='password'
      label='Password input'
      size={atomInputSizes.SMALL}
    />

    <AtomInput
      type='text'
      label='Simple medium text input'
      name='text'
    />

    <AtomInput
      type='text'
      label='Simple small text input'
      name='text'
      size={atomInputSizes.SMALL}
    />

    <AtomInput
      type='number'
      label='Simple number input'
      name='number'
    />

    <AtomInput
      type='date'
      label='Date input'
      name='date'
    />

    <AtomInput.Tag
      name='Tag'
      label='Tag input'
    />

    <AtomInput
      type='text'
      label='Simple text input width help text'
      name='text'
      helpText='Lorem ipsum'
    />
    <AtomInput
      type='text'
      label='Simple text input success'
      name='text'
      verificationtype={atomInputVerificationTypes.SUCCESS}
      verificationtext='Success'
